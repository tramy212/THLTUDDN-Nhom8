<div class="notification-create">
    <h2>Thông báo mới</h2>
    <form id="notificationForm">
      <div class="form-row">
        <div class="form-group">
          <label>Tiêu đề thông báo <span class="required">*</span></label>
          <input type="text" id="title" placeholder="Nhập tiêu đề thông báo" required>
        </div>
        <div class="form-group">
          <label>Loại thông báo <span class="required">*</span></label>
          <select id="type" required>
            <option value="">-- Chọn loại --</option>
            <option value="event">Sự kiện</option>
            <option value="update">Cập nhật</option>
            <option value="reminder">Nhắc nhở</option>
            <option value="thanks">Cảm ơn</option>
          </select>
        </div>
      </div>
  
  
      <div class="form-row">
        <div class="form-group">
          <label>Sự kiện <span class="required">*</span></label>
          <input type="text" id="event" placeholder="Nhập tên sự kiện" required>
        </div>
        <div class="form-group">
          <label>Người nhận</label>
          <input type="text" id="receiver" placeholder="Tên người nhận (không bắt buộc)">
        </div>
      </div>
  
  
      <div class="form-group">
        <label>Nội dung thông báo <span class="required">*</span></label>
        <textarea id="content" rows="6" placeholder="Nhập nội dung..." required></textarea>
      </div>
  
  
      <div class="form-actions">
        <button type="button" id="btnCancel" class="btn-cancel">Hủy</button>
        <button type="submit" class="btn-submit">Gửi</button>
      </div>
    </form>
  </div>
  