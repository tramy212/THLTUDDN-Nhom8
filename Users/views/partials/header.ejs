
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/assets/css/globals.css" />
  <link rel="stylesheet" href="/assets/css/style.css" />
  <link rel="stylesheet" href="/assets/css/notification.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <div class="TRANG-CH">
    <div class="group">
      <img class="image" src="/assets/images/logo_Due.png" alt="Logo DUE" />
      <hr class="line">
      <div class="heading-c-ng-nh-p">Cổng Sự Kiện</div>
      <p class="text-wrapper">Trường Đại học Kinh tế - Đại học Đà Nẵng</p>
      
      <div class="div">
        <div class="user-info">
          <div class="SVG"><i class="fa-solid fa-user"></i></div>
          <span class="username">Nguyễn Minh</span>
        </div>
        <div class="logout-info">
          <div class="SVG"><i class="fa-solid fa-right-from-bracket"></i></div>
          <span class="text-wrapper-3">Đăng xuất</span>
        </div>
      </div>
     <div class="frame">
  <div class="clarity-notification">
    <i class="fa-solid fa-bell"></i>
    <!-- SỐ ẨN MẶC ĐỊNH -->
    <span class="notification-count" style="display: none;">0</span>
  </div>

  <div class="notifications-dropdown">
    <div class="notifications">
      <!-- Có sẵn 3 thông báo cũ (đã đọc) -->
      <article class="notice">
        <header class="notice__head">
          <span class="notice__badge">Thông báo</span>
          <time class="notice__time">5/10/2025</time>
        </header>
        <h3 class="notice__title">Xác nhận đăng ký <span class="notice__event">React Workshop 2025</span></h3>
        <div class="notice__meta">
          <div class="meta"><i class="fa-regular fa-clock meta__icon"></i><span>11/10/2025 • 10:00–12:30</span></div>
          <div class="meta"><i class="fa-solid fa-location-dot meta__icon"></i><span>Hội trường A</span></div>
        </div>
      </article>

      <article class="notice">
        <header class="notice__head">
          <span class="notice__badge notice__badge--info">Cập nhật</span>
          <time class="notice__time">8/10/2025</time>
        </header>
        <h3 class="notice__title">
          Cập nhật <span class="notice__event">React Workshop 2025</span>
        </h3>
        <div class="notice__meta">
          <div class="meta">
            <i class="fa-regular fa-clock meta__icon"></i>
            <span>11/10/2025 • 10:00–12:30</span>
          </div>
          <div class="meta">
            <i class="fa-solid fa-location-dot meta__icon"></i>
            <span>Hội trường A</span>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>
    </div>
    <audio id="notification-sound" preload="auto">
  <source src="/assets/sounds/notification.mp3" type="audio/mpeg">
  <source src="/assets/sounds/notification.wav" type="audio/wav">
</audio>
  <script src="/assets/js/notification.js"></script>
    